

<h1 class="mb-2 mt-2">Users </h1>


<div class="row col-12 d-flex justify-content-center mt-3 mb-5" id="user-table">

   <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">User ID</th>
        <th scope="col">Email</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>  
        <td><%= user.email %></td>  
      
        <td><%= link_to 'Destroy', users_list_path + "/#{user.id}",method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>


